<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>NobleRest Terminology Servlet</display-name>

  <servlet>
    <servlet-name>TerminologyServlet</servlet-name>
    <servlet-class>edu.pitt.dbmi.nlp.noble.servlet.TerminologyServlet</servlet-class>
    <init-param>
      <param-name>terminology.location</param-name>
      <param-value>/usr/local/.noble/terminologies</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>TerminologyServlet</servlet-name>
    <url-pattern>/encode</url-pattern>
  </servlet-mapping>
</web-app>
